{% block bodymiddle %}
<div id="dialog-form" title="Edit image coordinates" width="800px" height="480px">
  <form id="form">
    	<select name="croppoi" >
    		 <option value="poi">poi</option>
    		 <option value="portrait">poi</option>
    		 <option value="square">poi</option>
    		 <option value="landscape">poi</option>
    		 <option value="large">poi</option>
    		 <option value="xlarge">poi</option>
    	</select>
    <fieldset>
    	<img src="#" width="600" height="400">
    </fieldset>
    <!-- Allow form submission with keyboard without duplicating the dialog button -->
    <input type="submit" tabindex="-1" style="position:absolute; top:-1000px">
  </form>
</div>  

<div id="upload-form" title="new image coordinates" width="800px" height="480px">
  <form id="form">
    	<div class="row">
    	<select name="uploadcroppoi" >
    		 <option value="poi">poi</option>
    		 <option value="portrait">poi</option>
    		 <option value="square">poi</option>
    		 <option value="landscape">poi</option>
    		 <option value="large">poi</option>
    		 <option value="xlarge">poi</option>
    	</select><br>
      Select Files to Upload <input type="file" name="filesToUpload[]" id="filesToUpload" multiple="multiple" />
    </div>
  </form>
    <fieldset>
    	<img src="#" width="600" height="400">
    </fieldset>
    <!-- Allow form submission with keyboard without duplicating the dialog button -->
    <input type="submit" tabindex="-1" style="position:absolute; top:-1000px">
  </form>
</div>  
  
<div class="ui-layout-north"><img src="assets/img/iMager.png" height="50"><!--button id="upload-image">open</button--></div>
<!--div class="ui-layout-south">South</div-->
  
  
<div class="ui-layout-center upload"></div>
<div class="ui-layout-east"></div>
<div class="ui-layout-west">
	<div class="four columns offset-by-one filetree-block">
		<ul class='jqueryFileTree' style="display: block">
		  <li class="directory expanded home">
		  	<div class="tree-node-el tree-node-leaf x-unselectable" style="padding-left:0"><span class="tree-node-indent">
